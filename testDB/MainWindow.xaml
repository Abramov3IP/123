<Window x:Class="testDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid1" AutoGenerateColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Login" Binding="{Binding Path=Login}" Width="*"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Path=Password}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Path=Role}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
